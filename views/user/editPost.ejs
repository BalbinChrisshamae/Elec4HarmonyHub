<%- include("../header.ejs") %>

    <div class="wrapper">

        <%- include("navbar.ejs") %>

    </div>


    <div class="container my-3 mt-5">

        <div class="row">
            <div class="col-12 mt-5">
                <h2 class="h4 text-white bg-info mb-3 p-4 rounded mt-5">Update Post</h2>

                <% if(posted!="" ) { %>

                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= posted %> <button type="button" class="btn-close" data-bs-dismiss="alert"
                                aria-label="Close"></button>
                    </div>


                    <% } %>

                        <form action="/updatePost" method="POST" class="mb-3" enctype="multipart/form-data">

                            <!-- enctype="multipart/form-data" -->
                            <div class="form-group mb-3">
                                <input type="hidden" class="form-control" id="post_id" name="post_id" value="<%= post.id%>">
                                <label for="topic">Title:</label>
                                <input type="text" class="form-control" id="title" name="title"
                                    placeholder="Give your topic a title." required value="<%= post.title %>">

                            </div>
                            <div class="form-group mb-3">
                                <label for="topic">Category:</label>
                                <select class="form-select" aria-label="Default select example" name="category"
                                    id="category">
                                    <% category.forEach(data=> { %>
                                        <option value="<%= data.id %>" <%if(data.id==post.category_id){ %> selected
                                            <% } %>>
                                                <%= data.name %>
                                        </option>
                                        <% });%>
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <label for="comment">Content:</label>
                                <textarea class="form-control" name="content" rows="10" max
                                    placeholder="Write your content here." required><%= post.content %></textarea>
                            </div>
                            <div class="form-group mb-3">
                                <label for="formFile" class="form-label">Image if necessary</label>

                                <div class="col-sm-12 mx-auto mb-5">
                                    <%if(post.images !=null ){ %>
                                        <div class="col-sm-6 mx-auto mb-5">
                                            <center>
                                                <img class="img-fluid" style="border-radius: 10px; height: 150px;"
                                                    src="/postImages/<%= post.images %>" alt="" srcset=""> <br>
                                                <label for="formFile" class="form-label">Initial
                                                    Image</label>
                                            </center>
                                        </div>
                                    <% } %>
                                      
                                </div>
                                <input class="form-control" type="file" id="formFile" name="picture" accept="image/*">
                            </div>

                            <button type="submit" name="upload" class="btn btn-primary">Update</button>
                        

                        </form>
            </div>
        </div>
    </div>





    <%- include("../footer.ejs") %>


        </body>

        </html>