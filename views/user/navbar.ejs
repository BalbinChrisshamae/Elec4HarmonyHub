<div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form action="/editProfile" method="POST" class="mb-3" enctype="multipart/form-data">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Profile</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label>First Name</label>
                            <input type="text" class="form-control" name="fname" value="<%= user.firstname %>" required>
                        </div>
                        <div class="col-12 mb-3">
                            <label>Middle Name</label>
                            <input type="text" class="form-control" name="mname" value="<%= user.middlename %>"
                                required>
                        </div>
                        <div class="col-12 mb-3">
                            <label>Last Name</label>
                            <input type="text" class="form-control" name="lname" value="<%= user.lastname %>"
                                id="exampleInputEmail1" placeholder="Enter lastname" required>
                        </div>

                        <div class="col-12 mb-3">
                            <label for="exampleFormControlFile1">Your Avatar </label>

                            <div class="col-sm-6 mx-auto">
                                <center>
                                    <img class="img-fluid" style="border-radius: 10px; height: 150px;"
                                        src="/userAvatar/<%= user.avatar %>" alt="" srcset="">
                                </center>
                            </div>
                            <br> <label for="exampleFormControlFile1">Change Avatar if (necessary)</label>
                            <input class="form-control" type="file" id="formFile" name="avatar" accept="image/*">


                        </div>
                        <div class="col-12 mb-3">
                            <label for="exampleInputPassword1">New Password (if necessary)</label>
                            <input type="password" class="form-control" name="pass">
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>