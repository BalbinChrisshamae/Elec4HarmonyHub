<%- include("header") %>

    <div class="wrapper">
        <nav class="navbar fixed-top">
            <div class="top_nav">
                <div class="left">
                    <br>
                    <span><img src="/images/sound.gif" height="80px" width="80px"></span>
                    <div class="logo">
                        <p><span>Harmony</span>Hub</p>
                    </div>
                </div>
                <div class="right">
                    <ul>
                        <li><a href="/login" style="text-decoration:none;">LogIn</a></li>
                        <li><a href="/register" style="text-decoration:none;">SignUp</a></li>
                    </ul>
                </div>
            </div>
            <div class="bottom_nav">
                <ul>
                    <li><a href="/" class="btn-active">Home</a></li>
                    <li><a href="/">About Us</a></li>
                    <li><a href="/">Categories</a></li>
                </ul>
            </div><br />
        </nav>
    </div>

    <div class="container mt-5">
        <div class="row mt-5">
            <div class="col-12 mt-5">
                <h2 class="h4 text-white bg-info mb-0 p-4 rounded-top mt-5">Post Details</h2>



                <table class="table table-striped table-bordered table-responsive-lg">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Author</th>
                            <th scope="col">Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="author-col">
                                <div>by <a href="#" style="text-decoration:none">
                                        <%= blog.email%>
                                    </a>
                                </div>
                            </td>
                            <td class="post-col d-lg-flex justify-content-lg-between">
                                <div><span class="font-weight-bold">Title:</span>
                                    <%= blog.title%>
                                </div>
                                <div><span class="font-weight-bold">Posted:</span>

                                    <%= new Date(blog.created_at).toLocaleString('en-US', { year: 'numeric' ,
                                        month: '2-digit' , day: '2-digit' , hour: 'numeric' , minute: 'numeric' ,
                                        hour12: true }) %>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>

                            </td>
                            <td>
                                <p>
                                    <%= blog.content%>
                                </p>
                            </td>
                        </tr>
                    </tbody>
                </table>




                <h5 class="font-weight-bolder">Comment Section:</h5><br>
                <% comments.forEach(data=> { %>
                    <div class="list-group comment list mb-3 rounded-0">
                        <h6>
                            <img src="userAvatar/ <%= data.avatar%>" width="40" height="40" class="rounded-circle" />

                            <%= data.email%>
                        </h6>
                        <div><small class="text-muted">
                                <%= new Date(data.created_at).toLocaleString('en-US', { year: 'numeric' ,
                                    month: '2-digit' , day: '2-digit' , hour: 'numeric' , minute: 'numeric' , hour12:
                                    true }) %>
                            </small>
                        </div>
                        <div class="form-group-item form-group-item-action mb-1 border-top">
                            <div class="d-flex align-items-center w-100">
                                <div class="col-auto flex-shrink-1 flex-grow-1">
                                    <div style="line-height:1em">
                                        <div class="font-weight-bolder"></div>
                                    </div><br>
                                    <h6 class="font-weight-bolder">Comment:
                                        <%= data.comment%>
                                    </h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% });%>


                        <center>
                            <p class="text-muted">Login to post a comment</p>
                        </center>
            </div>
        </div>
    </div>

    <%- include("footer.ejs") %>
        </body>

        </html>